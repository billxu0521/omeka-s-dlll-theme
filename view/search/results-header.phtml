$links = [];
$labels = [];
foreach ($sortOptions as $name => $label):
    @list($field, $direction) = explode(' ', $name, 2);
    $links[$field][] = [
        'direction' => $direction,
        'name' => $name,
        'active' => ($query->getSort() === $name),
        'label' => $label,
    ];
    $labels[$field] = $translate($label);
endforeach;
